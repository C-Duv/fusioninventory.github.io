msgstr ""

#. type: Title ##
#, no-wrap
msgid "Test suite validation"
msgstr ""

#. type: Plain text
msgid ""
"Ensures the full test suite, with developper tests enabled, executes "
"correctly on the following platforms:"
msgstr ""

#. type: Bullet: '* '
msgid "Linux"
msgstr ""

#. type: Bullet: '* '
msgid "Windows"
msgstr ""

#. type: Plain text
#, no-wrap
msgid "    make test TEST_AUTHOR=1\n"
msgstr ""

#. type: Title ##
#, no-wrap
msgid "Repository tagging"
msgstr ""

#. type: Plain text
#, no-wrap
msgid ""
"    git tag -s X.Z.Z\n"
"    git push --tags\n"
msgstr ""

#. type: Title ##
#, no-wrap
msgid "Tarball creation"
msgstr ""

#. type: Plain text
#, no-wrap
msgid ""
"    ./tools/updatePciids.sh # For the agent\n"
"    perl Mafile.PL\n"
"    make distsign\n"
"    make disttest\n"
"    make manifest\n"
"    make dist\n"
msgstr ""

